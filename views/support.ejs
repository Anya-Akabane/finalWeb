<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- css -->
    <link rel="stylesheet" href="/css/sidebar.css" />

    <link rel="stylesheet" href="/css/support.css" />

    <!-- Boxicons CSS -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />

    <!-- font awsome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />

    <!-- Favicon -->
    <link
      rel="icon"
      href="/images/logo-cookchat.png"
      type="image/x-icon"
    />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">


    <title>Support</title>
  </head>
  <body>
    <!-- sidebar -->
    <nav class="sidebar close">
      <header>
        <div class="image-text">
          <span class="image">
            <a href="/thread">
              <img src="/images/logo-cookchat.png" alt="logo" />
            </a>
          </span>

          <div class="text header-text">
            <a href="/thread">
              <span class="name">COOKCHAT</span>
            </a>
            
          </div>
        </div>

        <i class="bx bx-chevron-right toggle"></i>
      </header>

      <div class="menu-bar">
        <div class="menu">
          <li class="search-box">
            <i class="bx bx-search icon"></i>
            <input type="text" placeholder="Search..." />
          </li>

          <ul class="menu-links">
            <li class="nav-link">
              <a href="/thread">
                <i class="bx bx-home-alt icon"></i>
                <span class="text nav-text">Home</span>
              </a>
            </li>
            <li class="nav-link">
              <a href="/settings">
                <i class='bx bx-edit-alt icon'></i>
                <span class="text nav-text">Edit</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/changepass">
                <i class='bx bxs-key icon' ></i>
                <span class="text nav-text">Change Password</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/security">
                <i class='bx bx-shield icon' ></i>
                <span class="text nav-text">Security</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/account" class="dropdown-toggle">
                <i class='bx bxs-user-account icon' ></i>
                <span class="text nav-text">Deactivate Account</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/support">
                <i class='bx bx-help-circle icon'></i>
                <span class="text nav-text">Support</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/profile" class="dropdown-toggle">
                <i class="icon"
                  ><img src="/images/profile.png" width="30px"
                /></i>
                <span class="text nav-text">Kanna Kamui</span>
              </a>
            </li>
          </ul>
        </div>
        <div class="bottom-content">
          <li class="">
            <a href="/logout">
              <i class="bx bx-log-out icon"></i>
              <span class="text nav-text">Log out</span>
            </a>
          </li>

          <li class="mode">
            <div class="moon-sun">
              <i class="bx bx-moon icon moon"></i>
              <i class="bx bx-sun icon sun"></i>
            </div>

            <span class="mode-text text">Dark Mode</span>

            <div class="toggle-switch">
              <span class="switch"></span>
            </div>
          </li>
        </div>
      </div>
    </nav>

    <!-- nav bottom -->

    <header class="header" id="header">
      <nav class="nav container">
        <a href="/thread" class="nav__logo">COOKCHAT</a>

        <div class="nav__menu" id="nav-menu">
          <ul class="nav__list">
            <li class="nav__item">
              <a href="/thread" class="nav__link">
                <i class="bx bx-home-alt nav__icon"></i>
                <span class="nav__name">Home</span>
              </a>
            </li>

            <li class="nav__item">
              <a href="/settings" class="nav__link">
                <i class="bx bx-edit-alt nav__icon"></i>
                <span class="nav__name">Edit</span>
              </a>
            </li>

            <li class="nav__item">
              <a href="/changePass" class="nav__link">
                <i class="bx bxs-key nav__icon"></i>
                <span class="nav__name">Password</span>
              </a>
            </li>

            <li class="nav__item">
              <a href="/security" class="nav__link">
                <i class="bx bx-shield nav__icon"></i>
                <span class="nav__name">Security</span>
              </a>
            </li>

            <li class="nav__item">
              <a href="/account" class="nav__link active-link">
                <i class="bx bxs-user-account nav__icon"></i>
                <span class="nav__name">Account</span>
              </a>
            </li>
          </ul>
        </div>

      </nav>
    </header>

    <div class="hero">
      <nav>
        <ul class="notification-drop">
          <li class="item">
            <i class="bx bxs-bell notification-bell" aria-hidden="true"></i>
            <span class="btn__badge pulse-button">4</span>

            <ul>
              <li>First Item</li>
              <li>Second Item</li>
              <li>Third Item</li>
            </ul>
          </li>
        </ul>

        <img
          src="/images/user-img.jpg"
          width="40px"
          alt="profile"
          class="user-pic"
          onclick="toggleMenus()"
        />

        <div class="sub-menus-wrap" id="subMenus">
          <div class="sub-menus">
            <div class="user-info">
              <a href="/profile" class="sub-menus-link">
                <img
                  src="/images/profile.png"
                  alt="profile"
                  class="profile-pic"
                />
                <h3>Kanna Kamui</h3>
              </a>
              
            </div>
            <hr />

            <a href="/settings" class="sub-menus-link">
              <i class="bx bx-cog"></i>
              <p>Settings</p>
            </a>

            <a href="/adminLock" class="sub-menus-link">
              <i class="bx bxs-dashboard"></i>
              <p>Admin</p>
            </a>


            <a class="sub-menus-link" id="darkModeToggle">
              <i class="bx bx-moon"></i>
              <p>Switch Theme</p>
            </a>

            <a href="/support" class="sub-menus-link">
              <i class="bx bx-help-circle"></i>
              <p>Help & Support</p>
            </a>

            <a href="/logout" class="sub-menus-link">
              <i class="bx bx-log-out"></i>
              <p>Log Out</p>
            </a>
          </div>
        </div>
      </nav>
    </div>



    <section class="home">
      <div class="text">
        Support & Help
      </div>

      <section class="contact1">
        <div class="content1">
            <h2>Contact Us</h2>
            <p>For any inquiries, please contact us at:</p>

        </div>

        <div class="container1">
            <div class="contactInfo1">
                <div class="box1">
                    <div class="icon1">
                        <i class="fa-solid fa-map-location-dot"></i>
                    </div>
                    <div class="text1">
                        <h3>Address</h3>
                        <p>1234 Street Name, City Name, United States</p>
                    </div>
                </div>

                <div class="box1">
                    <div class="icon1">
                        <i class="fa-solid fa-envelope-open-text"></i>
                    </div>
                    <div class="text1">
                        <h3>Email</h3>
                        <p>s4020232@rmit.edu</p>
                    </div>
                </div>

                 <div class="box1">
                    <div class="icon1">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="text1">
                        <h3>Phone</h3>
                        <p>+123456789</p>
                    </div>
                </div>
            </div>

            <div class="contactForm">
                <form>
                    <h2>Send Message</h2>
                    <div class="inputBox">
                        <input type="text" name="" required="required" id="userName">
                        <span>Full Name</span>
                    </div>
                    <div class="inputBox">
                        <input type="email" name="" required="required" id="userEmail">
                        <span>Email</span>
                    </div>
                    <div class="inputBox">
                        <textarea required="required" id="userText"></textarea>
                        <span>Type your message...</span>
                    </div>
                    <div class="inputBox">
                        <input type="submit" name="" value="Send">
                    </div>
                </form>
            </div>
        </div>
      </section>

    </section>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="/javascript/support.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="/javascript/sidebar.js"></script>
  </body>
</html>
