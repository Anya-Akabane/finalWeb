    <main class="home">
      <div class="create-a-post">
        <h1>Create a post</h1>
        <form
          action="/createpost"
          method="post"
          id="my-form"
          enctype="multipart/form-data"
        >
          <div>
            <label for="title">Title</label>
            <input
              type="text"
              name="title"
              placeholder="Title"
              id="title"
              aria-required="true"
              required
            />
          </div>

          <div>
            <label for="post-content">Content</label>
            <textarea
              id="post-content"
              name="content"
              rows="4"
              cols="37"
              placeholder="Insert your content here"
              aria-required="true"
              required
            ></textarea>
          </div>

          <div>
            <label for="photos">Upload photos</label>
            <div id="drop-zone" role="button" tabindex="0">
              Drop your files here
            </div>
          </div>

          <div>
            <input
              
              type="file"
              id="photos"
              name="photos"
              accept="image/jpeg, image/png, image/jpg"
              onchange="previewImage()"
              required
            />
            <div id="imagePreview"></div>

            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </main>

